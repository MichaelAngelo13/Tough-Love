{
    "manifest_version": 2,
    "name": "Tough Love",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "content_scripts": [
      {
          "matches": ["https://www.youtube.com/"],
          "js": ["script.js"],
          "css": ["style.css"]
      },
      {
        "matches": ["https://www.codesmith.io/*"],
        "js": ["script2.js"],
        "css": ["style2.css"]
      }
  ],
  "web_accessible_resources": [
    "dentist-drill.mp3"
  ],
  "permissions": ["downloads"]
  }

  